{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"lib": ["ES2021"],
		"baseUrl": "./",
		"paths": {
			"@core/*": ["src/core/*"],
			"@application/*": ["src/application/*"],
			"@domain/*": ["src/domain/*"],
			"@infra/*": ["src/infra/*"],
			"@test/*": ["test/*"],
			"@utils/*": ["src/utils/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"types": ["node"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.spec.js"]
}
